<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="java.util.List" />

        <variable
            name="InfoResult"
            type="com.rascarlo.aurdroid.api.model.InfoResult" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_result_text_view_dependencies_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/formatted_dependencies(InfoResult.depends.size())}"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/info_result_dependencies_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_view_spacing_small" />

    </LinearLayout>

</layout>